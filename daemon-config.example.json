{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Claude Daemon 配置文件示例",
  "plugins": [
    {
      "name": "openai-proxy",
      "path": "/opt/claude-openai-proxy",
      "enabled": true,
      "config": {
        "port": 3002,
        "host": "127.0.0.1",
        "maxProcesses": 10,
        "processTimeout": 300000,
        "enableLogging": true
      }
    }
  ],
  "daemon": {
    "socketPath": "/tmp/claude-daemon.sock",
    "logLevel": "INFO",
    "enableWebUI": false,
    "webPort": 3000
  }
}
